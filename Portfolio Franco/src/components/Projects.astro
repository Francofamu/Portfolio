---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import ReactJS from "./icons/ReactJS.astro"
import NodeJS from "./icons/NodeJS.astro"
import PostgresSQL from "./icons/PostgresSQL.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Wordpress from "./icons/Wordpress.astro"
import TiendaNube from "./icons/TiendaNube.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React.js",
    class: "bg-[#003159] text-white",
    icon: ReactJS,
  },
  NODE: {
    name: "Node.js",
    class: "bg-[#003159] text-white",
    icon: NodeJS,
  },
  POSTGRESSQL: {
    name: "PostgresSQL",
    class: "bg-[#003159] text-white",
    icon: PostgresSQL,
  },
  WORDPRESS: {
    name: "Wordpress",
    class: "bg-[#003159] text-white",
    icon: Wordpress,
  },
  TIENDANUBE: {
    name: "TiendaNube",
    class: "bg-[#003159] text-white",
    icon: TiendaNube,
  },
}
const PROJECTS = [
  {
    title: "SERENA HOTEL - Tu refugio de elegancia y confort.",
    description:
      "Plataforma de reserva para hotel de lujo con pagos instantáneos y gestión integral de reservas para usuarios y proveedores. Desarrollada desde cero con React.js, Node.js, MySQL y Tailwind CSS.",
    link: "https://serena-hotel.vercel.app/",
    github: "https://github.com/Francofamu/Serena-Hotel",
    image: "/projects/SerenaHotel.png",
    tags: [TAGS.REACT, TAGS.NODE, TAGS.POSTGRESSQL, TAGS.TAILWIND, ],
  },
  {
    title: "LO DE JORGE  - Parrilla & Restó.",
    description:
      "Web institucional de una de las mejores parrillas de la localidad de La Plata. Desarrollada con Wordpress.",
    link: "https://lodejorge.com/",
    image: "/projects/LoDeJorge.png",
    tags: [TAGS.WORDPRESS],
  },
  {
    title: "Hermanas Criollas  - Tradición y Elegancia.",
    description:
      "Ecommerce de ropa de campo reversionada. Desarrollo del Diseño y asistencia en la configuración de la página. Desarrollada con Tienda Nube.",
    link: "https://hermanascriollas.com/",
    image: "/projects/LoDeJorge.png",
    tags: [TAGS.TIENDANUBE],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform overflow-clip rounded-xl">
      <img alt="Recién llegado vs 5 años en Nueva Zelanda" class="object-cover object-top w-full h-full transition duration-500 md:group-hover:scale-95 rounded-xl opacity-80 hover:opacity-100" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



